            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Select</th>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Value</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each chests}}
                    <tr>
                        <td>
                            <div class="radio">
                                <button onclick="myFunctionChest({{this.id}})">Select me !</button>
                            </div>
                        </td>
                        <td id="tdId{{this.id}}">{{this.id}}</td>
                        <td id="tdType{{this.id}}">{{this.type}}</td>
                        <td id="tdName{{this.id}}">{{this.name}}</td>
                        <td id="tdValue{{this.id}}">{{this.value}}</td>
                        <td id="tdID{{this.id}}">{{this._id}}</td>
