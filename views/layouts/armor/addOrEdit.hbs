<script type="text/javascript">
    function myFunctionChest(pId) {
        var myName = document.getElementById('ChestName');
        var myObjectID = document.getElementById('Chest');
        var myValue = document.getElementById('ChestValue')
        var myId = document.getElementById('ChestId');
        myName.value = document.getElementById('tdName'+pId).innerHTML;
        myObjectID.value = document.getElementById('tdID'+pId).innerHTML;
        myValue.value = document.getElementById('tdValue'+pId).innerHTML;
        myId.value = document.getElementById('tdId'+pId).innerHTML;
        alert(document.getElementById('tdId'+pId).innerHTML+" " +document.getElementById('tdName'+pId).innerHTML+" "+document.getElementById('tdValue'+pId).innerHTML+" "+document.getElementById('tdID'+pId).innerHTML);
    }
</script>
