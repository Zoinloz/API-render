<h3>Arms List <a class="btn btn-secondary" href="/arms/add">Create a Arm +</a></h3>

<label>Statut and Success : {{this.statut}} - {{this.success}} </label><br>
<label>Message Result : {{this.message}}</label>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Name</th>
            <th>Value</th>
            <th>#</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.type}}</td>
            <td>{{this.name}}</td>
            <td>{{this.value}}</td>
            <td>{{this._id}}</td>
            <td>
                <a href="/arms/{{this._id}}">Update</a>
                <a href="/arms/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record ? ');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a class="btn btn-primary" href="/">Return to the Project</a>
